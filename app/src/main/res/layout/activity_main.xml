<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtInput"
        android:textSize="26sp"
        android:gravity="end"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtResult"
        android:textSize="32sp"
        android:gravity="end"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Row 1 -->
        <Button android:id="@+id/btn7" android:text="7" style="@style/ButtonBase" />
        <Button android:id="@+id/btn8" android:text="8" style="@style/ButtonBase" />
        <Button android:id="@+id/btn9" android:text="9" style="@style/ButtonBase" />
        <Button android:id="@+id/btnDivide" android:text="/" style="@style/ButtonOp" />

        <!-- Row 2 -->
        <Button android:id="@+id/btn4" android:text="4" style="@style/ButtonBase" />
        <Button android:id="@+id/btn5" android:text="5" style="@style/ButtonBase" />
        <Button android:id="@+id/btn6" android:text="6" style="@style/ButtonBase" />
        <Button android:id="@+id/btnMultiply" android:text="*" style="@style/ButtonOp" />

        <!-- Row 3 -->
        <Button android:id="@+id/btn1" android:text="1" style="@style/ButtonBase" />
        <Button android:id="@+id/btn2" android:text="2" style="@style/ButtonBase" />
        <Button android:id="@+id/btn3" android:text="3" style="@style/ButtonBase" />
        <Button android:id="@+id/btnSubtract" android:text="-" style="@style/ButtonOp" />

        <!-- Row 4 -->
        <Button android:id="@+id/btn0" android:text="0" style="@style/ButtonBase" />
        <Button android:id="@+id/btnClear" android:text="C" style="@style/ButtonBase" />
        <Button android:id="@+id/btnEquals" android:text="=" style="@style/ButtonBase" />
        <Button android:id="@+id/btnAdd" android:text="+" style="@style/ButtonOp" />
    </GridLayout>
</LinearLayout>
