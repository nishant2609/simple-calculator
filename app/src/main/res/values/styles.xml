<resources>
    <style name="ButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/surface</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonOp" parent="ButtonBase">
        <item name="android:backgroundTint">@color/accent_blue</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="ButtonEquals" parent="ButtonBase">
        <item name="android:backgroundTint">@color/accent_green</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ButtonClear" parent="ButtonBase">
        <item name="android:backgroundTint">@color/accent_orange</item>
        <item name="android:elevation">6dp</item>
    </style>
</resources>